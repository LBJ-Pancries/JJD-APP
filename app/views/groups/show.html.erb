<h2><%= @group.title %></h2>
<a>
  <%= link_to('Write a Post', new_group_post_path(@group), class: "btn btn-default") %>
</a>
<table class="table">
  <thead>
    <tr>
      <th>文章内容</th>
      <th>发表时间</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post|%>
      <tr>
        <td><%= link_to(post.title, group_post_path(@group, post)) %></td>
        <td><%= post.created_at %></td>
        <td><%= link_to("Edit", edit_group_post_path(@group, post), class: "btn btn-sm btn-default")%></td>
        <td><%= link_to("Delete", [post.group, post], class: "btn btn-sm btn-default", method: :delete, data: { confirm: "Are you sure?"}) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
