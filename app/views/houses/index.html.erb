<div class="col-md-12">
  <div class="group">
    <%= link_to("New house", new_house_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      <% @houses.each do |house| %>
        <tr>
          <td><%= house.id %></td>
          <td><%= link_to(house.title, house_path(house)) %></td>
          <td><%= house.description %></td>
          <td>
              <%= link_to("Edit", edit_house_path(house), class: "btn btn-sm btn-default")%>
              <%= link_to("Delete", house_path(house),    class: "btn btn-sm btn-default",
                          method: :delete, data: { confirm: "Are you sure?" } )%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
