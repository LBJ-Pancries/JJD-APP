<div class="col-md-12">
  <div class="group">
    <%= link_to("New Category", new_category_path, class: "btn btn-primary pull-right")%>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>ID</td>
        <td width="150">HousesType Pic</td>
        <td>Name</td>
        <td>Description</td>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.id %></td>
          <td>
            <%= link_to category_path(category) do %>
              <% if category.image.present? %>
                <%= image_tag(category.image.thumb.url, class: "thumbnail") %>
              <% else %>
                <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail")%>
              <% end %>
            <% end %>
          </td>
          <td><%= link_to(category.name, category_path(category)) %></td>
          <td><%= category.description %></td>
          <td>
            <%= link_to("Edit", edit_category_path(category), class: "btn btn-sm btn-default")%>
            <%= link_to("Delete", category_path(category), class: "btn btn-sm btn-default",
                        method: :delete, data: { confirm: "Are you sure?" } )%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
